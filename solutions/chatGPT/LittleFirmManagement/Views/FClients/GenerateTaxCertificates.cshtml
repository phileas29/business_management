@model LittleFirmManagement.Models.GenerateTaxCertificatesViewModel

<h1>Generate tax certificates</h1>


<div class="container">
    <form asp-action="GenerateTaxCertificates">
        <div class="row">
            <div class="col-3">
                <div class="form-group">
                    <label asp-for="CivilYear" class="control-label"></label>
                    <select asp-for="CivilYear" class="form-control" asp-items="ViewBag.Year"></select>
                    <span asp-validation-for="CivilYear" class="text-danger"></span>
                </div>
            </div>
        <div class="row">
            <div class="col-md-4 d-flex flex-column align-items-end">
                <button asp-controller="FClients" asp-action="GenerateTaxCertificates" class="btn btn-primary mb-4">Generate</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>