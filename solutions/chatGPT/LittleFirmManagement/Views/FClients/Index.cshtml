@model LittleFirmManagement.Models.FClientsIndexViewModel

<h1>List of the customers</h1>


<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="table-responsive">
                <table class="table">
                <thead>
                    <tr>
                        <th>CName</th>
                        <th>CFirstname</th>
                        <th>CAddress</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        @foreach (FClient item in Model.Clients)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CFirstname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CAddress)<br/>
                                    @Html.DisplayFor(modelItem => item.CFkCity.CiName)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.CId">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.CId">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-controller="FInterventions" asp-action="Create" asp-route-id="@item.CId">
                                        <i class="fa-solid fa-file-invoice"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CId">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination controls -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @if (Model.Page > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/FClients/Index?page=@(Model.Page - 1)&nameSearch=@Model.NameSearch&firstnameSearch=@Model.FirstnameSearch&citySearch=@Model.CitySearch">Previous</a>
                        </li>
                    }
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Page ? "active" : "")">
                            <a class="page-link" href="/FClients/Index?page=@i&nameSearch=@Model.NameSearch&firstnameSearch=@Model.FirstnameSearch&citySearch=@Model.CitySearch">@i</a>
                        </li>
                    }
                    @if (Model.Page < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/FClients/Index?page=@(Model.Page + 1)&nameSearch=@Model.NameSearch&firstnameSearch=@Model.FirstnameSearch&citySearch=@Model.CitySearch">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>

        <!-- Column 2: Search and Map -->
        <div class="col-6">
            <form action="/FClients/Index" method="post">
                <div class="mb-3">
                    <label asp-for="NameSearch" class="form-label"></label>
                    <input asp-for="NameSearch" type="text" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="FirstnameSearch" class="form-label"></label>
                    <input asp-for="FirstnameSearch" type="text" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="CitySearch" class="form-label"></label>
                    <select asp-for="CitySearch" class="form-control" asp-items="Model.CFkCity"></select>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>

            <div id="mapid" style="height: 400px;"></div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.7.1/dist/leaflet.js"></script>

    <!-- Leaflet JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.min.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script>
        var mymap = L.map('mapid').setView([47.9375, -3.9585], 11);

        var redIcon = L.icon({
            iconUrl: 'https://cdn.rawgit.com/pointhi/leaflet-color-markers/master/img/marker-icon-red.png',
            iconSize: [25, 41],
            iconAnchor: [12, 41],
            popupAnchor: [1, -34],
            tooltipAnchor: [16, -28],
            shadowSize: [41, 41]
        });

        var greyIcon = L.icon({
            iconUrl: 'https://cdn.rawgit.com/pointhi/leaflet-color-markers/master/img/marker-icon-grey.png',
            iconSize: [25, 41],
            iconAnchor: [12, 41],
            popupAnchor: [1, -34],
            tooltipAnchor: [16, -28],
            shadowSize: [41, 41]
        });

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors'
        }).addTo(mymap);

        // Retrieve the search input values
        var nameSearch = document.getElementById('NameSearch').value;
        var firstnameSearch = document.getElementById('FirstnameSearch').value;
        var citySearch = document.getElementById('CitySearch').value;

        // Loop through each client and apply the filter
        @foreach (FClient c in Model.Clients)
        {
            <text>
                var marker = L.marker([@c.CLocationLat, @c.CLocationLong], { icon: redIcon }).addTo(mymap);
                marker.bindPopup('<a href="/FClients/Details/@c.CId">@c.CName</a>');
            </text>
        }

        @if (Model.ClientsGPS != null)
        {
            @foreach (FClient c in Model.ClientsGPS)
            {
                <text>
                    var marker = L.marker([@c.CLocationLat, @c.CLocationLong], { icon: greyIcon }).addTo(mymap);
                    marker.bindPopup('<a href="/FClients/Details/@c.CId">@c.CName</a>');
                </text>
            }
        }
    </script>
}