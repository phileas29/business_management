@model IEnumerable<LittleFirmManagement.Models.FClient>

@{
    ViewData["Title"] = "Index";
    var nameSearch = ViewData["NameSearch"];
    var firstnameSearch = ViewData["FirstnameSearch"];
    var citySearch = ViewData["CitySearch"];
}

<h1>Index</h1>


<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="mb-3">
                <label for="nameSearch">Name:</label>
                <input type="text" id="nameSearch" value="@nameSearch" class="form-control" />
            </div>

            <div class="mb-3">
                <label for="firstnameSearch">Firstname:</label>
                <input type="text" id="firstnameSearch" value="@firstnameSearch" class="form-control" />
            </div>

            <div class="mb-3">
                <label for="citySearch">City:</label>
                <input type="text" id="citySearch" value="@citySearch" class="form-control" />
            </div>

            <div class="mb-3">
                <button id="searchButton" class="btn btn-primary">Search</button>
            </div>
            <div class="table-responsive">
                <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CFirstname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CFkCity.CiName)
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (string.IsNullOrEmpty(ViewBag.NameSearch) || item.CName.IndexOf(ViewBag.NameSearch, StringComparison.OrdinalIgnoreCase) >= 0)
                            {
                                if (string.IsNullOrEmpty(ViewBag.FirstnameSearch) || item.CFirstname.IndexOf(ViewBag.FirstnameSearch, StringComparison.OrdinalIgnoreCase) >= 0)
                                {
                                    if (string.IsNullOrEmpty(ViewBag.CitySearch) || item.CFkCity.CiName.IndexOf(ViewBag.CitySearch, StringComparison.OrdinalIgnoreCase) >= 0)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CFirstname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CAddress)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CFkCity.CiName)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.CId">Edit</a> |
                                                <a asp-action="Details" asp-route-id="@item.CId">Details</a> |
                                                <a asp-action="Delete" asp-route-id="@item.CId">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Column 2: Map -->
        <div class="col-6">
            <div id="mapid" style="height: 400px;"></div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.7.1/dist/leaflet.js"></script>

    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Leaflet JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.min.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        var mymap = L.map('mapid').setView([47.9375, -3.9585], 11);

        var redIcon = L.icon({
            iconUrl: 'https://cdn.rawgit.com/pointhi/leaflet-color-markers/master/img/marker-icon-red.png',
            iconSize: [25, 41],
            iconAnchor: [12, 41],
            popupAnchor: [1, -34],
            tooltipAnchor: [16, -28],
            shadowSize: [41, 41]
        });

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors'
        }).addTo(mymap);

        // Retrieve the search input values
        var nameSearch = document.getElementById('nameSearch').value;
        var firstnameSearch = document.getElementById('firstnameSearch').value;
        var citySearch = document.getElementById('citySearch').value;

        // Loop through each client and apply the filter
        @foreach (var c in Model)
        {
            <text>
                // Check if the client matches the search criteria
                if ((nameSearch === '' || '@c.CName'.toLowerCase().includes(nameSearch.toLowerCase()))
                && (firstnameSearch === '' || '@c.CFirstname'.toLowerCase().includes(firstnameSearch.toLowerCase()))
                && (citySearch === '' || '@c.CFkCity.CiName'.toLowerCase().includes(citySearch.toLowerCase()))) {


                var marker = L.marker([@c.CLocationLat, @c.CLocationLong], { icon: redIcon }).addTo(mymap);
                    marker.bindPopup('<a href="/FInterventions/Create?CId=@c.CId">@c.CName</a>');
                }
            </text>
        }

        document.getElementById("searchButton").addEventListener("click", function () {
            var nameSearch = document.getElementById("nameSearch").value;
            var firstnameSearch = document.getElementById("firstnameSearch").value;
            var citySearch = document.getElementById("citySearch").value;

            // Redirect to the search action with the provided search parameters
                window.location.href = "/FClients/Index?nameSearch=" + encodeURIComponent(nameSearch)
                + "&firstnameSearch=" + encodeURIComponent(firstnameSearch)
                + "&citySearch=" + encodeURIComponent(citySearch);
        });
    </script>
}