@model IEnumerable<LittleFirmManagement.Models.FClient>

@{
    ViewData["Title"] = "Index";
    var nameSearch = ViewData["NameSearch"];
    var firstnameSearch = ViewData["FirstnameSearch"];
    var citySearch = ViewData["CitySearch"];
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
    var pageSize = ViewBag.PageSize;
}

<h1>Index</h1>


<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="table-responsive">
                <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CName)</th>
                        <th>@Html.DisplayNameFor(model => model.CFirstname)</th>
                        <th>@Html.DisplayNameFor(model => model.CAddress)</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        @foreach (FClient item in ViewBag.Clients)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CFirstname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CAddress)<br/>
                                    @Html.DisplayFor(modelItem => item.CFkCity.CiName)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.CId">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.CId">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-controller="FInterventions" asp-action="Create" asp-route-id="@item.CId">
                                        <i class="fa-solid fa-file-invoice"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CId">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination controls -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @if (currentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/FClients/Index?page=@(currentPage - 1)&nameSearch=@nameSearch&firstnameSearch=@firstnameSearch&citySearch=@citySearch">Previous</a>
                        </li>
                    }
                    @for (var i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="/FClients/Index?page=@i&nameSearch=@nameSearch&firstnameSearch=@firstnameSearch&citySearch=@citySearch">@i</a>
                        </li>
                    }
                    @if (currentPage < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/FClients/Index?page=@(currentPage + 1)&nameSearch=@nameSearch&firstnameSearch=@firstnameSearch&citySearch=@citySearch">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>

        <!-- Column 2: Search and Map -->
        <div class="col-6">
            <form action="/FClients/Index" method="post">
                <div class="mb-3">
                    <label for="nameSearch">Name:</label>
                    <input type="text" id="nameSearch" name="nameSearch" value="@nameSearch" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="firstnameSearch">Firstname:</label>
                    <input type="text" id="firstnameSearch" name="firstnameSearch" value="@firstnameSearch" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="citySearch">City:</label>
                    <select id="citySearch" name="citySearch" class="form-control">
                        <option value="">All</option>
                        @foreach (FCity city in ViewBag.Cities)
                        {
                            @if (city.CiId == ViewBag.CitySearch) {
                                <option value="@city.CiId" selected>@city.CiName</option>
                            } else {
                                <option value="@city.CiId">@city.CiName</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>

            <div id="mapid" style="height: 400px;"></div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.7.1/dist/leaflet.js"></script>

    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Leaflet JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.min.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        var mymap = L.map('mapid').setView([47.9375, -3.9585], 11);

        var redIcon = L.icon({
            iconUrl: 'https://cdn.rawgit.com/pointhi/leaflet-color-markers/master/img/marker-icon-red.png',
            iconSize: [25, 41],
            iconAnchor: [12, 41],
            popupAnchor: [1, -34],
            tooltipAnchor: [16, -28],
            shadowSize: [41, 41]
        });

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors'
        }).addTo(mymap);

        // Retrieve the search input values
        var nameSearch = document.getElementById('nameSearch').value;
        var firstnameSearch = document.getElementById('firstnameSearch').value;
        var citySearch = document.getElementById('citySearch').value;

        // Loop through each client and apply the filter
        @foreach (FClient c in ViewBag.Clients)
        {
            <text>
                var marker = L.marker([@c.CLocationLat, @c.CLocationLong], { icon: redIcon }).addTo(mymap);
                marker.bindPopup('<a href="/FInterventions/Create/@c.CId">@c.CName</a>');
            </text>
        }
    </script>
}