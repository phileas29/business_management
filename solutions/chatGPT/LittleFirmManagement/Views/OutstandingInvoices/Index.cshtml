@model LittleFirmManagement.Models.OutstandingInvoicesViewModel

@{
    var data = ((IEnumerable<dynamic>)ViewData["Data"]).ToList();
}
<h1>Oustanding invoices</h1>


<div class="container">
    <form asp-action="Index">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-3">
                <div class="form-group">
                    <label asp-for="SubjectId" class="control-label"></label>
                    <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ActionDate" class="control-label"></label>
                    <input asp-for="ActionDate" type="date" class="form-control" />
                    <span asp-validation-for="ActionDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaymentId" class="control-label"></label>
                    <select asp-for="PaymentId" class="form-control" asp-items="ViewBag.PaymentId"></select>
                    <span asp-validation-for="PaymentId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-9">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>no</th>
                                <th>client</th>
                                <th>date inter</th>
                                <th>date invoice</th>
                                <th>date rec</th>
                                <th>date credit</th>
                                <th>description</th>
                                <th>amount</th>
                                <th>select</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var row in data)
                            {
                                <tr>
                                    <th>@row.no</th>
                                    <th>@row.CName</th>
                                    <th>@row.IDate</th>
                                    <th>@row.InInvoiceDate</th>
                                    <th>@row.InReceiptDate</th>
                                    <th>@row.InCreditDate</th>
                                    <th>@row.IDescription</th>
                                    <th>@row.InAmount</th>
                                </tr>
                            }
                            <tr></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 d-flex flex-column align-items-end">
                <button asp-controller="OutstandingInvoices" asp-action="Index" class="btn btn-primary mb-4">Save</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>